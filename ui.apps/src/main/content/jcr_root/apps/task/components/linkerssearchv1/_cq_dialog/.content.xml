<?xml version="1.0" encoding="UTF-8"?>
<jcr:root xmlns:sling="http://sling.apache.org/jcr/sling/1.0" xmlns:cq="http://www.day.com/jcr/cq/1.0" xmlns:jcr="http://www.jcp.org/jcr/1.0" xmlns:nt="http://www.jcp.org/jcr/nt/1.0"
    jcr:primaryType="nt:unstructured"
    jcr:title="Properties"
    extraClientlibs="practice.task"
    sling:resourceType="cq/gui/components/authoring/dialog">
    <content
            jcr:primaryType="nt:unstructured"
            sling:resourceType="granite/ui/components/foundation/container">
        <layout
                jcr:primaryType="nt:unstructured"
                sling:resourceType="granite/ui/components/foundation/layouts/tabs"
                type="nav"/>
        <items jcr:primaryType="nt:unstructured">
            <tab1
                    jcr:primaryType="nt:unstructured"
                    jcr:title="Styles"
                    sling:resourceType="granite/ui/components/foundation/section">
                <layout
                        jcr:primaryType="nt:unstructured"
                        sling:resourceType="granite/ui/components/foundation/layouts/fixedcolumns"
                        margin="{Boolean}false"/>
                <items jcr:primaryType="nt:unstructured">
                    <column
                            jcr:primaryType="nt:unstructured"
                            sling:resourceType="granite/ui/components/foundation/container">
                        <items jcr:primaryType="nt:unstructured">
                            <errorMessageHexColor
                                    jcr:primaryType="nt:unstructured"
                                    sling:resourceType="granite/ui/components/coral/foundation/form/textfield"
                                    fieldLabel="Error message HEX color"
                                    required="{Boolean}true"
                                    name="./errorMessageHexColor"
                                    value="#C8102F"/>
                            <backgroundHexColor
                                    jcr:primaryType="nt:unstructured"
                                    sling:resourceType="granite/ui/components/coral/foundation/form/textfield"
                                    fieldLabel="Background HEX color"
                                    required="{Boolean}true"
                                    name="./backgroundHexColor"
                                    value="#DDDFCE"/>
                            <buttonBackgroundHexColor
                                    jcr:primaryType="nt:unstructured"
                                    sling:resourceType="granite/ui/components/coral/foundation/form/textfield"
                                    fieldLabel="Button Background HEX color"
                                    required="{Boolean}true"
                                    name="./buttonBackgroundHexColor"
                                    value="#000000"/>
                            <buttonTextHexColor
                                    jcr:primaryType="nt:unstructured"
                                    sling:resourceType="granite/ui/components/coral/foundation/form/textfield"
                                    fieldLabel="Button Text HEX color"
                                    required="{Boolean}true"
                                    name="./buttonTextHexColor"
                                    value="#000000"/>
                            <buttonUnavailableBackgroundHexColor
                                    jcr:primaryType="nt:unstructured"
                                    sling:resourceType="granite/ui/components/coral/foundation/form/textfield"
                                    fieldLabel="Button Unavailable Background HEX color"
                                    required="{Boolean}true"
                                    name="./buttonUnavailableBackgroundHexColor"
                                    value="#A8A8A8"/>
                            <buttonUnavailableTextHexColor
                                    jcr:primaryType="nt:unstructured"
                                    sling:resourceType="granite/ui/components/coral/foundation/form/textfield"
                                    fieldLabel="Button Unavailable Text HEX color"
                                    required="{Boolean}true"
                                    name="./buttonUnavailableTextHexColor"
                                    value="#6D7177"/>
                        </items>
                    </column>
                </items>
            </tab1>
            <tab2
                    jcr:primaryType="nt:unstructured"
                    jcr:title="Messages"
                    sling:resourceType="granite/ui/components/foundation/section">
                <layout
                        jcr:primaryType="nt:unstructured"
                        sling:resourceType="granite/ui/components/foundation/layouts/fixedcolumns"
                        margin="{Boolean}false"/>
                <items jcr:primaryType="nt:unstructured">
                    <column
                            jcr:primaryType="nt:unstructured"
                            sling:resourceType="granite/ui/components/foundation/container">
                        <items jcr:primaryType="nt:unstructured">
                            <notFoundMessage
                                    jcr:primaryType="nt:unstructured"
                                    sling:resourceType="granite/ui/components/coral/foundation/form/textfield"
                                    fieldLabel="Not Found Message"
                                    name="./notFoundMessage"
                                    required="{Boolean}true"
                                    value="Not found"/>
                            <foundMessage
                                    jcr:primaryType="nt:unstructured"
                                    sling:resourceType="granite/ui/components/coral/foundation/form/textfield"
                                    fieldLabel="Found Message"
                                    name="./foundMessage"
                                    required="{Boolean}true"
                                    value="Found {} links:"/>
                        </items>
                    </column>
                </items>
            </tab2>
            <tab3
                    jcr:primaryType="nt:unstructured"
                    jcr:title="Pagination"
                    sling:resourceType="granite/ui/components/foundation/section">
                <layout
                        jcr:primaryType="nt:unstructured"
                        sling:resourceType="granite/ui/components/foundation/layouts/fixedcolumns"
                        margin="{Boolean}false"/>
                <items jcr:primaryType="nt:unstructured">
                    <column
                            jcr:primaryType="nt:unstructured"
                            sling:resourceType="granite/ui/components/foundation/container">
                        <items jcr:primaryType="nt:unstructured">
                            <countPaginationRows
                                    jcr:primaryType="nt:unstructured"
                                    sling:resourceType="granite/ui/components/coral/foundation/form/numberfield"
                                    fieldLabel="Count Pagination Rows"
                                    required="{Boolean}true"
                                    name="./countPaginationRows"
                                    value="10"/>
                        </items>
                    </column>
                </items>
            </tab3>
        </items>
    </content>
</jcr:root>
