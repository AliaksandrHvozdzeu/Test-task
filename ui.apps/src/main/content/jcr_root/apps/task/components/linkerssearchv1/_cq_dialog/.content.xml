<?xml version="1.0" encoding="UTF-8"?>
<jcr:root xmlns:sling="http://sling.apache.org/jcr/sling/1.0" xmlns:cq="http://www.day.com/jcr/cq/1.0" xmlns:jcr="http://www.jcp.org/jcr/1.0" xmlns:nt="http://www.jcp.org/jcr/nt/1.0"
    jcr:primaryType="nt:unstructured"
    jcr:title="Properties"
    extraClientlibs="practice.task"
    sling:resourceType="cq/gui/components/authoring/dialog">
    <content
            jcr:primaryType="nt:unstructured"
            sling:resourceType="granite/ui/components/foundation/container">
        <layout
                jcr:primaryType="nt:unstructured"
                sling:resourceType="granite/ui/components/foundation/layouts/tabs"
                type="nav"/>
        <items jcr:primaryType="nt:unstructured">
            <tab0
                    jcr:primaryType="nt:unstructured"
                    jcr:title="Path"
                    sling:resourceType="granite/ui/components/foundation/section">
                <layout
                        jcr:primaryType="nt:unstructured"
                        sling:resourceType="granite/ui/components/foundation/layouts/fixedcolumns"
                        margin="{Boolean}false"/>
                <items jcr:primaryType="nt:unstructured">
                    <column
                            jcr:primaryType="nt:unstructured"
                            sling:resourceType="granite/ui/components/foundation/container">
                        <items jcr:primaryType="nt:unstructured">
                            <pathToResource
                                    jcr:primaryType="nt:unstructured"
                                    sling:resourceType="granite/ui/components/coral/foundation/form/pathfield"
                                    rootPath="/content"
                                    fieldLabel="Path to resource"
                                    required="{Boolean}true"
                                    name="./pathToResource"/>
                        </items>
                    </column>
                </items>
            </tab0>
            <tab1
                    jcr:primaryType="nt:unstructured"
                    jcr:title="Styles"
                    sling:resourceType="granite/ui/components/foundation/section">
                <layout
                        jcr:primaryType="nt:unstructured"
                        sling:resourceType="granite/ui/components/foundation/layouts/fixedcolumns"
                        margin="{Boolean}false"/>
                <items jcr:primaryType="nt:unstructured">
                    <column
                            jcr:primaryType="nt:unstructured"
                            sling:resourceType="granite/ui/components/foundation/container">
                        <items jcr:primaryType="nt:unstructured">
                            <errorMessageColor
                                    jcr:primaryType="nt:unstructured"
                                    sling:resourceType="granite/ui/components/coral/foundation/form/colorfield"
                                    fieldLabel="Error message color"
                                    required="{Boolean}true"
                                    name="./errorMessageColor"
                                    variant="default"
                                    value="#C8102F"/>
                            <backgroundColor
                                    jcr:primaryType="nt:unstructured"
                                    sling:resourceType="granite/ui/components/coral/foundation/form/colorfield"
                                    fieldLabel="Background color"
                                    required="{Boolean}true"
                                    name="./backgroundColor"
                                    variant="default"
                                    value="#DDDFCE"/>
                        </items>
                    </column>
                </items>
            </tab1>
            <tab2
                    jcr:primaryType="nt:unstructured"
                    jcr:title="Messages"
                    sling:resourceType="granite/ui/components/foundation/section">
                <layout
                        jcr:primaryType="nt:unstructured"
                        sling:resourceType="granite/ui/components/foundation/layouts/fixedcolumns"
                        margin="{Boolean}false"/>
                <items jcr:primaryType="nt:unstructured">
                    <column
                            jcr:primaryType="nt:unstructured"
                            sling:resourceType="granite/ui/components/foundation/container">
                        <items jcr:primaryType="nt:unstructured">
                            <notFoundMessage
                                    jcr:primaryType="nt:unstructured"
                                    sling:resourceType="granite/ui/components/coral/foundation/form/textfield"
                                    fieldLabel="Not Found Message"
                                    name="./notFoundMessage"
                                    required="{Boolean}true"
                                    value="Not found"/>
                            <foundMessage
                                    jcr:primaryType="nt:unstructured"
                                    sling:resourceType="granite/ui/components/coral/foundation/form/textfield"
                                    fieldLabel="Found Message"
                                    name="./foundMessage"
                                    required="{Boolean}true"
                                    value="Found {} links:"/>
                            <urlIsNotValidMessage
                                    jcr:primaryType="nt:unstructured"
                                    sling:resourceType="granite/ui/components/coral/foundation/form/textfield"
                                    fieldLabel="URL Is Not Valid Message"
                                    name="./urlIsNotValidMessage"
                                    required="{Boolean}true"
                                    value="URL is not valid"/>
                            <requestErrorMessage
                                    jcr:primaryType="nt:unstructured"
                                    sling:resourceType="granite/ui/components/coral/foundation/form/textfield"
                                    fieldLabel="Request Error Message"
                                    name="./requestErrorMessage"
                                    required="{Boolean}true"
                                    value="Request Error"/>
                        </items>
                    </column>
                </items>
            </tab2>
            <tab3
                    jcr:primaryType="nt:unstructured"
                    jcr:title="Pagination"
                    sling:resourceType="granite/ui/components/foundation/section">
                <layout
                        jcr:primaryType="nt:unstructured"
                        sling:resourceType="granite/ui/components/foundation/layouts/fixedcolumns"
                        margin="{Boolean}false"/>
                <items jcr:primaryType="nt:unstructured">
                    <column
                            jcr:primaryType="nt:unstructured"
                            sling:resourceType="granite/ui/components/foundation/container">
                        <items jcr:primaryType="nt:unstructured">
                            <countPaginationRows
                                    jcr:primaryType="nt:unstructured"
                                    sling:resourceType="granite/ui/components/coral/foundation/form/numberfield"
                                    fieldLabel="Count Pagination Rows"
                                    required="{Boolean}true"
                                    name="./countPaginationRows"
                                    value="10"/>
                        </items>
                    </column>
                </items>
            </tab3>
        </items>
    </content>
</jcr:root>
